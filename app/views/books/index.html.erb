<% if flash[:complete] %>
  <div class="flash">
    <%= flash[:complete] %>
  </div>
<% end %>
<header>
  <h1 class="top">Books</h1>
</header>
<main class="index-page">
<table cellspacing="10">
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
    <% @books.each do |book| %>
    <tr class="index">
  	<td><%= book.title %></td>
  	<td><%= book.body %></td>
    <td><%= link_to "Show", show_book_path(book.id) %></td>
    <td><%= link_to "Edit", edit_book_path(book.id) %>
    <td><%= link_to "Destroy", destroy_book_path(book), method: :delete %>
    </tr>
  	<% end %>
  </table>
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
  <% end %>
</main>




